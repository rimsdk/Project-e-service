@model ProjetPfa.ModelView.PrestataireAddVM

@{
    Layout = null;
}

<!--
Author: W3layouts
Author URL: http://w3layouts.com
-->
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link rel="stylesheet" href="~/css/Form.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-img">
                    <img src="~/assets/images/CC.jpg" alt="">
                </div>
                <div class="signup-form">
                    <form method="POST" class="register-form" id="register-form">
                        <h1 class="title-hero-19">Inscription :</h1>
                        <div asp-validation-summary="All" class="text-danger"></div> <!-- Résumé des erreurs -->
                        <div class="form-group">
                            <label for="nom">Nom :</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span> <!-- Affichage du message d'erreur -->
                        </div>
                        <div class="form-group">
                            <label for="prenom">Prénom :</label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail :</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="mdp">Mot de passe :</label>
                            <input asp-for="Mdp" type="password" class="form-control" />
                            <span asp-validation-for="Mdp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="cmdp">Confirmation du mot de passe :</label>
                            <input asp-for="cMdp" type="password" class="form-control" />
                            <span asp-validation-for="cMdp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="date_de_naissance">Date de naissance :</label>
                            <input asp-for="Date_de_naissance" type="date" class="form-control" />
                            <span asp-validation-for="Date_de_naissance" class="text-danger"></span>
                        </div>
                        <div class="form-radio">
                            <label class="radio-label">Genre :</label>
                            <div class="form-radio-item">
                                <input type="radio" asp-for="Genre" id="male" value="Male" checked>
                                <label for="male">Homme</label>
                                <span class="check"></span>
                            </div>
                            <div class="form-radio-item">
                                <input type="radio" asp-for="Genre" id="female" value="Female">
                                <label for="female">Femme</label>
                                <span class="check"></span>
                            </div>
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="telephone">Téléphone :</label>
                            <input asp-for="Téléphone" class="form-control" />
                            <span asp-validation-for="Téléphone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="adresse">Adresse :</label>
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                        <div class="form-submit">
                            <input type="submit" value="Réinitialiser tout" class="submit" name="reset" id="reset" />
                            <input type="submit" value="Soumettre" class="submit" name="submit" id="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
