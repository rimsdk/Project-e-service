@model ProjetPfa.ModelView.ClientAddVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link rel="stylesheet" href="~/css/Form.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-img">
                    <img src="~/assets/images/nvl3.jpg" alt="">
                </div>
                <div class="signup-form">
                    <form method="POST" class="register-form" id="register-form">
                        <h1 class="title-hero-19">Inscription :</h1>
                        <div class="form-group">
                            <label for="nom">Nom :</label>
                            <input type="text" asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="prenom">Prénom :</label>
                            <input type="text" asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail :</label>
                            <input type="email" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="mdp">Mot de passe :</label>
                            <input type="password" asp-for="Mdp" class="form-control" />
                            <span asp-validation-for="Mdp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="cMdp">Confirmation du mot de passe :</label>
                            <input type="password" asp-for="cMdp" class="form-control" />
                            <span asp-validation-for="cMdp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="date_de_naissance">Date de naissance :</label>
                            <input type="date" asp-for="Date_de_naissance" class="form-control" />
                            <span asp-validation-for="Date_de_naissance" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="radio-label">Genre :</label>
                            <div class="form-radio">
                                <input type="radio" asp-for="Genre" id="male" value="Male" checked>
                                <label for="male">Homme</label>
                                <input type="radio" asp-for="Genre" id="female" value="Female">
                                <label for="female">Femme</label>
                            </div>
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="telephone">Téléphone :</label>
                            <input type="tel" asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="adresse">Adresse :</label>
                            <input type="text" asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                        <div class="form-submit">
                            <input type="submit" value="Réinitialiser tout" class="submit" name="reset" id="reset" />
                            <input type="submit" value="Soumettre" class="submit" name="submit" id="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
